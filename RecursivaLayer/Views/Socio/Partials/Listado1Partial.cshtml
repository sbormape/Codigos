@using RecursivaLayer.Models

@if (Model.CantidadTotal > 0)
{
    <div class="modal fade " id="Listado1Modal" tabindex="-1" role="dialog" >
        <div class="modal-dialog  modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Listado 1</h4>
                </div>
                <div class="modal-body" style="margin:20px; overflow-y: scroll;">

                        <div style="min-height: 360px">
                            <table ng-table="tableParams" class="table table-striped table-bordered table-hover table-condensed table-responsive ">
                                <thead>
                                    <tr class=" btn-primary">
                                        <th>Nombre</th>
                                        <th>Edad</th>
                                        <th>Equipo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Socio socio in Model.Listado1)
                                    {
                                        <tr>
                                            <td>@socio.Nombre</td>
                                            <td>@socio.Edad</td>
                                            <td>@socio.Equipo</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
               </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                        <i class="glyphicon glyphicon-remove"></i>
                        Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}